<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="test" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"></plugin>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>
        <plugin type="com.bilibili.universal.util.plugin.MySQLLimitPlugin"></plugin>
        <!--        <plugin type="com.bilibili.bjcom.mbg.plugin.MysqlInsertUpdatePlugin"></plugin>-->
        <commentGenerator type="com.bilibili.universal.util.plugin.DbRemarksCommentGenerator">
            <!-- 这个元素用来去除指定生成的注释中是否包含生成的日期 false:表示保护 -->
            <!-- 如果生成日期，会造成即使修改一个字段，整个实体类所有属性都会发生变化，不利于版本控制，所以设置为true -->
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/miffy?useUnicode=true&amp;characterEncoding=UTF-8&amp;tinyInt1isBit=false&amp;allowMultiQueries=true&amp;zeroDateTimeBehavior=convertToNull"
                        userId="root" password="">
        </jdbcConnection>
        <javaTypeResolver type="com.bilibili.universal.util.plugin.JavaTypeResolver">
            <!-- This property is used to specify whether MyBatis Generator should
                force the use of java.math.BigDecimal for DECIMAL and NUMERIC fields, -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="com.bilibili.universal.dao.model"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成映射文件的包名和位置 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.bilibili.universal.dao"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--                  修改完直接在  com.bilibili.ad.commercialorder.Generator 里执行main方法                 -->
        <!-- 要生成哪些表 -->

        <table tableName="universal_process" domainObjectName="UniversalProcessPo" mapperName="UniversalProcessDao">
            <!-- 自动生成primary key 并返回-->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <table tableName="process_blocking" domainObjectName="ProcessBlockingPo" mapperName="ProcessBlockingDao">
            <!-- 自动生成primary key 并返回-->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <table tableName="process_status_log" domainObjectName="ProcessStatusLogPo" mapperName="ProcessStatusLogDao">
            <!-- 自动生成primary key 并返回-->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <table tableName="process_status_metadata" domainObjectName="ProcessStatusMetadataPo"
               mapperName="ProcessStatusMetadataDao">
            <!-- 自动生成primary key 并返回-->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <table tableName="process_action_metadata" domainObjectName="ProcessActionMetadataPo"
               mapperName="ProcessActionMetadataDao">
            <!-- 自动生成primary key 并返回-->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <table tableName="process_template_metadata" domainObjectName="ProcessTemplateMetadataPo"
               mapperName="ProcessTemplateMetadataDao">
            <!-- 自动生成primary key 并返回-->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>